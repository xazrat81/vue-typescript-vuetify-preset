{
    "extends": "",
    "useConfigFiles": true,
    "plugins": {
        "@vue/cli-plugin-babel": {},
        "@vue/cli-plugin-typescript": {
            "classComponent": true,
            "useTsWithBabel": true
        },
        "@vue/cli-plugin-router": {
            "historyMode": true
        },
        "@vue/cli-plugin-vuex": {},
        "vue-cli-plugin-vuetify": {
            "preset": "configure",
            "replaceComponents": false,
            "useTheme": false,
            "useCustomProperties": false,
            "iconFont": "mdi",
            "installFonts": true,
            "useAlaCarte": true,
            "usePolyfill": true,
            "locale": "ru"
        }
    },
    "cssPreprocessor": "sass"
}